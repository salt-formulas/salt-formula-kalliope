
{%- load_yaml as base_defaults %}

Debian:
  pkgs:
  - kalliope
  dir:
    base: /srv/kalliope
    config: /etc/kalliope
    resource:
    - /etc/kalliope/resources/neurons
    - /etc/kalliope/resources/stt
    - /etc/kalliope/resources/tts
    - /etc/kalliope/resources/signal
    - /etc/kalliope/resources/trigger
  synapse: {}

{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('kalliope:server')) %}
